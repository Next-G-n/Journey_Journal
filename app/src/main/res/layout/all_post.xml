<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_margin="25dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapp="http://schemas.android.com/tools"
    android:id="@+id/all_entries"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/post_location"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dalog_white"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_locatio_2"/>
        <TextView
            android:id="@+id/location_view"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/location_example"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="5dp"
            android:id="@+id/image_view"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="50dp"
            app:riv_corner_radius="20dp"
            android:layout_marginBottom="-60dp"/>

    <RelativeLayout
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

     android:orientation="horizontal"
        >

            <androidx.cardview.widget.CardView
                android:id="@+id/bookmarks_like_post"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="150dp"
                app:cardElevation="10dp">
                <ImageView
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_bookmark_2"
                    />

            </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="8dp"
            android:background="@drawable/background_dalog_white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/title_view"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="@string/example_title"
                    android:textColor="@color/colorPrimaryDark"
                    />




            </LinearLayout>
            <TextView
                android:id="@+id/description_view"
                android:layout_marginTop="-20dp"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="@string/example_dec_msg"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

</RelativeLayout>