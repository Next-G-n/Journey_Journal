<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapp="http://schemas.android.com/tools"
    android:background="@color/WhiteBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:id="@+id/post_location"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_dalog_white"
        android:orientation="horizontal">
        <ImageView
            android:padding="5dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_locatio_2"/>
        <TextView
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/location_example"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        aapp:cardCornerRadius="50dp"
        android:layout_marginBottom="-60dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
android:orientation="horizontal"
        >

            <androidx.cardview.widget.CardView
                android:id="@+id/bookmarks_like_post"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="150dp"
                app:cardElevation="5dp">
                <ImageView
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_bookmark_2"
                    />

            </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@drawable/background_dalog_white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:textSize="40sp"
                    android:text="@string/example_title"
                    android:textColor="@color/colorPrimaryDark"
                    />




            </LinearLayout>
            <TextView
                android:layout_marginTop="-20dp"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="@string/example_dec_msg"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

</RelativeLayout>