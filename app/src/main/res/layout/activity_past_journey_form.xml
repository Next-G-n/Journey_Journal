<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/WhiteBackground"
    tools:context=".PastJourneyForm">

    <LinearLayout
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:padding="2dp"
            android:layout_width="55dp"
            android:gravity="center"
            android:layout_height="55dp">

            <androidx.cardview.widget.CardView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="150dp"

                app:cardElevation="5dp">
                <ImageView
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow"
                    android:contentDescription="@string/todo" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="@string/previous_journey2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <LinearLayout
            android:padding="2dp"
            android:layout_width="55dp"
            android:gravity="center"
            android:layout_height="55dp">

            <androidx.cardview.widget.CardView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                app:cardCornerRadius="150dp"
                app:cardElevation="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_user_2"
                    tools:ignore="ImageContrastCheck"
                    android:contentDescription="@string/todo" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="15dp"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:shapeAppearanceOverlay="@style/Rounded_ShapeAppearanceOverlay.MaterialComponents.TextInputLayout"
        app:boxStrokeColor="@color/colorPrimaryDark"
        app:boxBackgroundColor="@color/white"
        app:errorEnabled="true"
        style="@style/bounders">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="TouchTargetSizeCheck" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="15dp"
        android:id="@+id/location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:errorEnabled="true"
        android:layout_marginEnd="40dp"
        android:hint="@string/location"
        android:textColorHint="@color/colorPrimaryDark"
        app:shapeAppearanceOverlay="@style/Rounded_ShapeAppearanceOverlay.MaterialComponents.TextInputLayout"
        app:boxStrokeColor="@color/colorPrimaryDark"
        app:boxBackgroundColor="@color/white"
        style="@style/bounders">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/location_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="TouchTargetSizeCheck" />


    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="15dp"
        android:id="@+id/Date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        app:errorEnabled="true"
        android:layout_marginEnd="40dp"
        android:hint="@string/date"
        android:textColorHint="@color/colorPrimaryDark"
        app:shapeAppearanceOverlay="@style/Rounded_ShapeAppearanceOverlay.MaterialComponents.TextInputLayout"
        app:boxStrokeColor="@color/colorPrimaryDark"
        app:boxBackgroundColor="@color/white"
        style="@style/bounders">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/colorPrimaryDark"
            tools:ignore="TouchTargetSizeCheck" />


    </com.google.android.material.textfield.TextInputLayout>





    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:id="@+id/date_picker_actions2"
        android:paddingEnd="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:gravity="center_vertical"
        android:text="@string/date"
        android:background="@drawable/new_text_field"
        android:textColor="@color/colorPrimaryDark"
        />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="15dp"
        android:id="@+id/description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description"
        app:errorEnabled="true"
        android:textColorHint="@color/colorPrimaryDark"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:shapeAppearanceOverlay="@style/Rounded_ShapeAppearanceOverlay.MaterialComponents.TextInputLayout2"
        app:boxStrokeColor="@color/colorPrimaryDark"
        app:boxBackgroundColor="@color/white"
        style="@style/bounders">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="12"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:scrollHorizontally="false"
            android:textColor="@color/colorPrimaryDark" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/submit_post"
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="@string/submit"
        android:textColor="@color/white"
        />
</LinearLayout>

</LinearLayout>